{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES2021",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "e2e", "test", "dist", "**/*spec.ts"]
}
